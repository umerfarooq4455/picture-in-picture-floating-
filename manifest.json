{
  "manifest_version": 3,
  "name": "Picture-in-Picture - Mini Video Player",
  "version": "1.0",
  "description": "Watch video using Picture-in-Picture",
  "action": {
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
